{
  "info": {
    "name": "Book API - Simple Version",
    "description": "API สำหรับจัดการข้อมูลหนังสือด้วย Node.js และ MySQL",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Books",
      "item": [
        {
          "name": "Get All Books",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/books",
              "host": ["{{base_url}}"],
              "path": ["api", "books"]
            }
          }
        },
        {
          "name": "Get Book by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/books/{{test_book_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "books", "{{test_book_id}}"]
            }
          }
        },
        {
          "name": "Create Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "{{content_type}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"The Great Gatsby\",\n  \"author\": \"F. Scott Fitzgerald\",\n  \"published_year\": 1925,\n  \"genre\": \"Fiction\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/books",
              "host": ["{{base_url}}"],
              "path": ["api", "books"]
            }
          }
        },
        {
          "name": "Create Book - Thai",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "{{content_type}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"สามก๊ก\",\n  \"author\": \"หลอกวนจง\",\n  \"published_year\": 1522,\n  \"genre\": \"ประวัติศาสตร์\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/books",
              "host": ["{{base_url}}"],
              "path": ["api", "books"]
            }
          }
        },
        {
          "name": "Update Book",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "{{content_type}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"The Great Gatsby (Updated)\",\n  \"author\": \"F. Scott Fitzgerald\",\n  \"published_year\": 1925,\n  \"genre\": \"Classic Fiction\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/books/{{test_book_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "books", "{{test_book_id}}"]
            }
          }
        },
        {
          "name": "Delete Book",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/books/{{test_book_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "books", "{{test_book_id}}"]
            }
          }
        },
        {
          "name": "Search Books",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/books/search?q={{test_search_term}}",
              "host": ["{{base_url}}"],
              "path": ["api", "books", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "{{test_search_term}}"
                }
              ]
            }
          }
        },
        {
          "name": "Search Books - Thai",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/books/search?q={{test_search_thai}}",
              "host": ["{{base_url}}"],
              "path": ["api", "books", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "{{test_search_thai}}"
                }
              ]
            }
          }
        }
      ]
    },
